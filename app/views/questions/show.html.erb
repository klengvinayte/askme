<div class="container">
  <h2 class="title-lg mb">Вопрос <%= @question.id %></h2>
  <p class="mb-sm"><%= @question.body %></p>
  <p>user_id <b><%= @question.user_id %></b></p>


  <div class="mt">
    <%= link_to fa_icon('pencil'), edit_question_path(@question), title: "Изменить вопрос" %>
    <%= button_to fa_icon('trash-o'), question_path(@question), method: :delete, title: 'Удалить вопрос', data: { turbo_method: :delete, turbo_confirm: 'Are you sure?' } %>
    <% if @question.hidden == false %>
      <%= button_to fa_icon('eye-slash'), hide_path(@question), method: :put, title: "Сделать скрытым" %>
    <% else %>
      <%= button_to fa_icon('eye'), hide_path(@question), method: :put, title: "Сделать видимым" %>
    <% end %>


  </div>

  <p class="mt"><%= link_to "Все вопросы", questions_path %></p>
</div>
