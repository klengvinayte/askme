<div class="mb-sm q-text">
  <%= question.body %>
</div>

<div class="text-sm question-footer">
  <div class="text-grey">
    <%= l(question.created_at, format: :short) %>
  </div>

  <div>
    <%= link_to fa_icon('pencil'), edit_question_path(question), title: "Изменить вопрос" %>
    <%= button_to fa_icon('trash-o'), question_path(question), method: :delete, title: 'Удалить вопрос', data: { turbo_method: :delete, turbo_confirm: 'Are you sure?' } %>
    <% if question.hidden? %>
      <%= button_to fa_icon('eye'), hide_question_path(question), method: :put, title: "Сделать видимым" %>
    <% else %>
      <%= button_to fa_icon('eye-slash'), hide_question_path(question), method: :put, title: "Сделать скрытым" %>
    <% end %>
  </div>
</div>
